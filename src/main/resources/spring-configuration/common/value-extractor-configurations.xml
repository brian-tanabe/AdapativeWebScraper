<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="class-definitions.xml"/>

    <bean id="espnProjectionsRushingYardsValueExtractor" class="com.btanabe.adaptivewebscraper.parsers.TextExtractor">
        <property name="objectClasspath" ref="integerClass"/>
        <property name="xpathSelector" ref="rushingYardsSelectorStatement"/>
        <property name="outputClazzFactoryClazz" ref="integerFactoryClass"/>
    </bean>

    <bean id="espnPlayerProjectionRowValueExtractor" class="com.btanabe.adaptivewebscraper.parsers.DocumentExtractor">
        <property name="xpathSelector" value="tr[class ^= pncPlayerRow]"/>
        <property name="objectClasspath" ref="documentClass"/>
        <property name="outputClazzFactoryClazz" ref="documentFactoryClass"/>
    </bean>

    <bean id="rushingYardsSelectorStatement" class="com.btanabe.adaptivewebscraper.utilities.SelectorStatementBuilder">
        <property name="parentTagName" value="tr"/>
        <property name="parentClassnameEqualityOperator" value="STARTS_WITH"/>
        <property name="parentClassname" value="pncPlayerRow"/>
        <property name="tagName" value="td"/>
        <property name="classnameEqualityOperator" value="EQUALS"/>
        <property name="className" value="playertableStat"/>
        <property name="childElementIndex" value="6"/>
    </bean>

</beans>